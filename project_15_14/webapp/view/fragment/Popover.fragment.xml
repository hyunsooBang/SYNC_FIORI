<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="Filter"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Read" press="onRead" />
			</OverflowToolbar>
		</footer>
		<VBox class="sapUiSmallMargin">
            <Label text="Member ID: " />
            <Input placeholder="Enter your member ID" value="{popover>/Memid}" />
        </VBox>
        <VBox class="sapUiSmallMargin">
            <Label text="Member Name: " />
            <Input placeholder="Enter your member name"  value="{popover>/Memnm}" />
        </VBox>
	</Popover>
</core:FragmentDefinition>
