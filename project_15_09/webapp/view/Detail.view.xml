<mvc:View controllerName="odata.project1509.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
        <f:Form id="idForm"
			editable="true">
			<f:title>
				<core:Title text="Order Detail" />
			</f:title>
			<f:layout>
				<f:ColumnLayout
					columnsM="2"
					columnsL="3"
					columnsXL="4"
				/>
			</f:layout>
			<f:formContainers> 
				<f:FormContainer title="Order NO. {OrderID}">
					<f:formElements>
						<f:FormElement label="Ship Country">
							<f:fields>
								<Text text="{ShipCountry}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
                    <f:formElements>
						<f:FormElement label="Ship Name">
							<f:fields>
								<Text text="{ShipName}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
                    <f:formElements>
						<f:FormElement label="Ship Address">
							<f:fields>
								<Text text="{ShipAddress}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
                    <f:formElements>
						<f:FormElement label="Ship City">
							<f:fields>
								<Text text="{ShipCity}" />
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
    </Page>
</mvc:View>
