<mvc:View controllerName="sap.btp.ux400solving15.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:c="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiLargeMargin"> 
                <Text text="버튼을 클릭하면 아래 input에 값이 랜덤으로 채워집니다." />
                <Input id="inputID" value="{list>/number/randomNumber}" type="Number" change="onValueChange" />
                <Button text="Random" press="onRandomPress" />
            </VBox >
            <VBox class="sapUiLargeMargin">
                <t:Table
                        rows="{list>/number}"
                        selectionMode="MultiToggle"
                        paste="onPaste"
                        ariaLabelledBy="title"
                        width="60%"
                        >
                        <t:extension>
                            <OverflowToolbar style="Clear">
                                <Text  text="랜덤 목록 리스트"/>
                            </OverflowToolbar>
                        </t:extension>
                        <t:columns>
                            <t:Column >
                                <Label text="value" />
                                <t:template>
                                    <Text text="{list>randomNumber}" wrapping="false" />
                                </t:template>
                            </t:Column>
                        </t:columns>
                    </t:Table>
                    <c:Fragment fragmentName="sap.btp.ux400solving15.view.fragment.Products"/>
                    <Button text="Open Product" press="onOpenDialog" />
            </VBox>
        </content>
        
        
    </Page>
</mvc:View>
