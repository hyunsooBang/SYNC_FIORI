<View xmlns:core="sap.ui.core" controllerName="project1501.controller.Main"
    xmlns="sap.ui.core.mvc" displayBlock="true"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table" 
    > 
    <m:Page id="page" title="FIORI 계산기 실습">
        <m:content>
            <l:VerticalLayout width="210px" >
                <m:Input id="idInput1" placeholder="연산자1" type="Number"  />
                <m:Select showSecondaryValues="true" width="100%" id="select">
                   <m:items>
                        <core:ListItem  text="+" key="plus" additionalText="Plus" /> 
                        <core:ListItem  text="-" key="minus" additionalText="Minus" /> 
                        <core:ListItem  text="*" key="multiply" additionalText="Multiply" /> 
                        <core:ListItem  text="/" key="divide" additionalText="Divide" /> 
                   </m:items>
                    </m:Select>
                <m:Input id="idInput2" placeholder="연산자2" type="Number" />
                <m:Button text="실행" icon="sap-icon://simulate" type="Emphasized" width="100%" press="onClick"/> 
            </l:VerticalLayout>

            <!--sap.ui.table.Table -->
            <t:Table
				rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				paste="onPaste"
				ariaLabelledBy="title">
				<t:columns>
					<t:Column width="11rem">
						<m:Label text="Product Name" />
						<t:template>
							<m:Text text="{Name}" wrapping="false" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>

            <!--sap.m.Table -->
            <m:Table id="idProductsTable">
            <m:headerToolbar>
                <m:OverflowToolbar>
                    <m:content>
                        <m:Title text="Products" level="H2"/>
                        <m:ToolbarSpacer />
                    </m:content>
                </m:OverflowToolbar>
            </m:headerToolbar>
            <m:columns> <!--열-->
                <m:Column 
                    hAlign="End">
                    <m:Text text="Price" /> <!--cells 아이템 개수랑 맞춰야함-->
                </m:Column>
            </m:columns>
            <m:items>
                <m:ColumnListItem vAlign="Middle">
                    <m:cells>
                        <m:Text text="{SupplierName}" />
                    </m:cells>
                </m:ColumnListItem>
            </m:items>
	</m:Table>
            
        </m:content>
        <m:footer>
            <!--bar타입 클래스 적용-->
            <m:Toolbar >
                <m:ToolbarSpacer />
                <m:Button text="보내기"  />
            </m:Toolbar>
        </m:footer>
    </m:Page>
</View> 
<!--html xml 주석-->